# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

# Set default charset
[*.{js,php,scss,sass}]
charset = utf-8

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[README.md]
indent_style = space
indent_size = 4

[composer.json]
indent_style = space
indent_size = 4
